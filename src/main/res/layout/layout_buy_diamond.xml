<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rounded_white"
    android:paddingBottom="@dimen/dimen_10dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/btnClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_orange_radius"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnOk"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:paddingBottom="50dp"
        android:paddingTop="@dimen/dimen_30dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/watch_ad_bg_in_toolbar"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="Weekly"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_18sp"
            android:drawableLeft="@drawable/ic_coins"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:text="$5"
            android:textSize="@dimen/dimen_16sp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBuy500"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/btnClose"
        app:layout_constraintRight_toRightOf="@+id/btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/btnClose"
        android:background="@drawable/ripple_color_app_button_bg_no_radius_top"
        android:text="buy"
        android:textColor="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnOk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_orange_radius"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnClose"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:paddingBottom="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sale 33%"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@color/red"
            android:padding="@dimen/dimen_2dp"
            android:gravity="center"
            android:rotation="25"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textSize="9sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNumDiamon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:background="@drawable/watch_ad_bg_in_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="Monthly"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_18sp"
            android:drawableLeft="@drawable/ic_coins"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice1500"
            app:layout_constraintTop_toBottomOf="@+id/tvNumDiamon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:text="$10"
            android:textSize="@dimen/dimen_16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBuy1500"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/btnOk"
        app:layout_constraintRight_toRightOf="@+id/btnOk"
        app:layout_constraintBottom_toBottomOf="@+id/btnOk"
        android:background="@drawable/ripple_color_app_button_bg_no_radius_top"
        android:text="buy"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv01"
        app:layout_constraintTop_toBottomOf="@+id/btnBuy1500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="@dimen/dimen_5dp"
        android:text="You will be opened all levels.\n You can cancel your subscription at any time, you will immediately receive."
        android:textSize="@dimen/dimen_16sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv01"
        android:textColor="@color/black"
        android:text="@android:string/cancel"
        android:textAllCaps="true"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>