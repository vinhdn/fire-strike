<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Gloomy" />

    <style name="Gloomy.Core" />

    <style name="Gloomy.Core.WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Gloomy.Core.ActionBar" />

    <style name="Gloomy.Core.ActionBar.TabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:paddingLeft">@dimen/gloomy_core_actionbar_tab_padding</item>
        <item name="android:paddingRight">@dimen/gloomy_core_actionbar_tab_padding</item>
    </style>

    <style name="Gloomy.Core.ActionBar.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">

        <item name="android:textSize">@dimen/gloomy_core_actionbar_tab_textsize</item>
    </style>

    <style name="Gloomy.Core.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/gloomy_core_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/gloomy_core_button_padding_vert</item>
        <item name="android:paddingBottom">@dimen/gloomy_core_button_padding_vert</item>
        <item name="android:paddingLeft">@dimen/gloomy_core_button_padding_hor</item>
        <item name="android:paddingRight">@dimen/gloomy_core_button_padding_hor</item>
    </style>

    <style name="Gloomy.Core.Button.Negative">
        <item name="android:fontFamily">@font/ui</item>
        <item name="android:background">@drawable/button_negative</item>
    </style>

    <style name="Gloomy.Core.Button.Positive">
        <item name="android:fontFamily">@font/ui</item>
        <item name="android:background">@drawable/button_positive</item>
    </style>

    <style name="Gloomy.Core.Text">
        <item name="android:textColor">#EEE</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Gloomy.Theme">
        <item name="android:windowAnimationStyle">@style/Gloomy.Core.WindowAnimationTransition</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Gloomy.Theme.LauncherActivity" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/back_splash</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Gloomy.Theme.MainActivity" parent="@style/Theme.AppCompat">
        <item name="actionBarTabStyle">@style/Gloomy.Core.ActionBar.TabView</item>
        <item name="actionBarTabTextStyle">@style/Gloomy.Core.ActionBar.TabText</item>
        <item name="android:actionBarTabStyle">@style/Gloomy.Core.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/Gloomy.Core.ActionBar.TabText</item>
        <item name="android:windowBackground">@color/gloomy_core_background</item>
    </style>

    <style name="Gloomy.Theme.WebActivity" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/gloomy_core_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Gloomy.Prepare" />

    <style name="Gloomy.Prepare.Title" parent="@style/Gloomy.Core.Text">
        <item name="android:fontFamily">@font/ingame</item>
        <item name="android:textSize">@dimen/gloomy_prepare_title_textsize</item>
    </style>

    <style name="Gloomy.Prepare.Action" parent="@style/Gloomy.Core.Text">
        <item name="android:fontFamily">@font/ingame</item>
        <item name="android:textSize">@dimen/gloomy_prepare_action_textsize</item>
    </style>

    <style name="Gloomy.Menu" />

    <style name="Gloomy.Menu.Text">
        <item name="android:fontFamily">@font/ingame</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/gloomy_menu_textsize</item>
    </style>

    <style name="Gloomy.SelectEpisode" />

    <style name="Gloomy.SelectEpisode.Text" parent="@style/Gloomy.Core.Text">

        <item name="android:fontFamily">@font/ui</item>
        <item name="android:textSize">@dimen/gloomy_selectepisode_textsize</item>
    </style>

    <style name="Gloomy.SelectEpisode.EpisodeText" parent="@style/Gloomy.Core.Text">
        <item name="android:fontFamily">@font/ui</item>
        <item name="android:textSize">@dimen/gloomy_selectepisode_episode_textsize</item>
    </style>

    <style name="Gloomy.Alt" />

    <style name="Gloomy.Alt.Button.Negative" parent="@style/Gloomy.Core.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_negative</item>
    </style>

    <style name="Gloomy.Alt.Button.Positive" parent="@style/Gloomy.Core.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_positive</item>
    </style>

    <style name="Gloomy.Alt.Text">
        <item name="android:textColor">@color/gloomy_alt_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/gloomy_alt_textsize</item>
    </style>

    <style name="Gloomy.Alt.Text.Title">
        <item name="android:textSize">@dimen/gloomy_alt_title_textsize</item>
        <!-- Don't use textAllCaps, because it removes spans -->
    </style>

    <style name="Gloomy.Alt.Text.Subtitle">
        <item name="android:textSize">@dimen/gloomy_alt_subtitle_textsize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Gloomy.Alt.Text.Imp">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/gloomy_alt_subtitle_textsize</item>
        <item name="android:textColor">@color/gloomy_alt_imp</item>
    </style>

</resources>
